<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/zereitroquei</property>
        <property name="hibernate.connection.username">zereitroquei</property>
        <property name="hibernate.connection.password">zereitroquei</property>
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.format_sql">false</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <mapping class="learning.encontreitroquei.model.User"/>
        <mapping class="learning.encontreitroquei.model.Product"/>
        <mapping class="learning.encontreitroquei.model.Trade"/>
        <mapping class="learning.encontreitroquei.model.Message"/>
    </session-factory>
</hibernate-configuration>
